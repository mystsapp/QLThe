@model UserViewModel

@{
    ViewData["Title"] = "Create Account";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm Mới</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh Sách Nhân Viên</a></li>
                    <li class="breadcrumb-item active">Thêm Mới Nhân Viên</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Thêm Mới Nhân Viên</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form method="post" autocomplete="off" enctype="multipart/form-data">
                <div class="p-4 border rounded">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="User.Username"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="User.Username" />
                            <span class="text-danger" asp-validation-for="User.Username"></span>
                        </div>

                        <div class="col-2">
                            <label asp-for="User.HoTen"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="User.HoTen" />
                            <span class="text-danger" asp-validation-for="User.HoTen"></span>
                        </div>

                    </div>



                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="User.Password"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" asp-for="User.Password" />
                            <span class="text-danger" asp-validation-for="User.Password"></span>
                        </div>

                        <div class="col-2">
                            <label asp-for="User.ChiNhanhId"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="User.ChiNhanhId" class="form-control border-input ddlChiNhanh"
                                    asp-items="@(new SelectList(Model.ChiNhanhs,"Id","MaCN"))">
                            </select>
                        </div>



                    </div>


                    <div class="form-group row">


                        <div class="col-2">
                            <label asp-for="User.VanPhong"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="User.VanPhong" class="form-control border-input ddlVanPhong"
                                    asp-items="@(new SelectList(Model.VanPhongs,"Name","Name"))">
                            </select>
                            <span class="text-danger" asp-validation-for="User.VanPhong"></span>
                        </div>


                        <div class="col-2">
                            <label asp-for="User.TrangThai"></label>
                        </div>
                        <div class="col-4">
                            <input type="checkbox" asp-for="User.TrangThai" />
                        </div>
                    </div>

                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="User.Khoi"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="User.Khoi" class="form-control border-input "
                                    asp-items="@(new SelectList(Model.KhoiViewModels,"Name","Name"))">
                            </select>
                            <span class="text-danger" asp-validation-for="User.Khoi"></span>
                        </div>

                        <div class="col-2">
                            <label asp-for="User.RoleId"></label>
                        </div>
                        <div class="col-4">
                            <select asp-for="User.RoleId" class="form-control border-input "
                                    asp-items="@(new SelectList(Model.Roles,"Id","Name"))">
                            </select>
                            <span class="text-danger" asp-validation-for="User.RoleId"></span>
                        </div>

                    </div>

                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i></button>
                        <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
                    </div>

                </div>
            </form>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->



@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script src="~/js/Admin/User/createController.js"></script>
    }

}

