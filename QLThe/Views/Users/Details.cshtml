@model UserViewModel
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Xem Chi Tiết</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Danh Sách Nhân Viên</a></li>
                    <li class="breadcrumb-item active">Chi Tiết Nhân Viên - @Model.User.Username</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-list text-info"></i> Chi Tiết Nhân Viên - @Model.User.Username</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <div class="p-4 border rounded ">



                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="User.Username"></label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="User.Username" readonly />
                    </div>

                    <div class="col-2">
                        <label asp-for="User.RoleId"></label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="User.Role.Name" readonly />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="User.HoTen"></label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="User.HoTen" readonly />
                    </div>

                    <div class="col-2">
                        <label asp-for="User.PhongBan"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="User.PhongBan" class="form-control" readonly />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="User.MaCN"></label>
                    </div>
                    <div class="col-4">
                        <input class="form-control" asp-for="User.MaCN" readonly />
                    </div>

                    <div class="col-2">
                        <label asp-for="User.VanPhong"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="User.VanPhong" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="User.Khoi"></label>
                    </div>
                    <div class="col-4">
                        <input asp-for="User.Khoi" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.User.Id" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-success" asp-action="Index"><i class="fas fa-backward"></i></a>
                </div>
            </div>
        </div>


    </div>
    <!-- /.card-body -->
    <!-- /.card -->

</section>
<!-- /.content -->
