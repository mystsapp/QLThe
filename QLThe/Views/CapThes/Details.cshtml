@model CapTheViewModel
@{
    ViewData["Title"] = "CapThe Detail";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Detail</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="DetailsRedirect" asp-route-strUrl="@Model.StrUrl">Danh Sách Cấp Thẻ</a></li>
                    <li class="breadcrumb-item active">Chi Tiết Cấp Thẻ</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file text-info"></i> Chi Tiết Cấp Thẻ</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <form method="post" autocomplete="off" enctype="multipart/form-data">
                <div class="p-4 border rounded">

                    <div class="form-group row">

                        <div class="col-2">
                            <label> Cấp cho chi nhánh</label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" readonly asp-for="CapThe.MaCN" />
                        </div>

                        <div class="col-2">
                            <label asp-for="CapThe.VanPhongId"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" readonly asp-for="CapThe.VanPhong.Name" />
                        </div>

                    </div>



                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="CapThe.NguoiNhan"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" readonly asp-for="CapThe.NguoiNhan" />
                        </div>

                        <div class="col-2">
                            <label asp-for="CapThe.Httt"></label>
                        </div>
                        <div class="col-4">
                            <input class="form-control" readonly asp-for="CapThe.Httt" />
                        </div>

                    </div>


                    <div class="form-group row">

                        <div class="col-2">
                            <label asp-for="CapThe.GhiChu"></label>
                        </div>
                        <div class="col-4">
                            <textarea asp-for="CapThe.GhiChu" class="form-control" readonly></textarea>
                        </div>
                    </div>


                    <div class="form-group ">
                        <a class="btn btn-success" asp-action="DetailsRedirect" asp-route-strUrl="@Model.StrUrl"><i class="fas fa-backward"></i></a>
                    </div>

                </div>

            </form>

        </div>
        <!-- /.card-body -->

    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
